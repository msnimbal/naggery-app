
# =================================
# Naggery App Environment Variables
# =================================

# Database Configuration
DB_NAME=naggery
DB_USER=naggery_user
DB_PASSWORD=your_secure_db_password_here
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters

# AbacusAI API Key (Required for AI features)
ABACUSAI_API_KEY=your_abacusai_api_key_here

# Application Settings
NODE_ENV=development
APP_PORT=3000
SEED_DATABASE=true

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration (Optional - defaults to console in development)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SERVICE=console
EMAIL_API_KEY=your_email_service_api_key

# SMS Configuration (Optional - defaults to console in development)
SMS_SERVICE=console
SMS_API_KEY=your_sms_service_api_key

# Two-Factor Authentication
TWO_FA_ISSUER=Naggery App
TWO_FA_SERVICE_NAME=Naggery

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=audio/webm,audio/wav,audio/mp3,audio/mp4

# AI Processing Configuration
AI_PROCESSING_ENABLED=true
DEFAULT_AI_PROVIDER=openai

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400

# CORS Configuration (for production)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# Production Optimizations
NEXT_TELEMETRY_DISABLED=1
